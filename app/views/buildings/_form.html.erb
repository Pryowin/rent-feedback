
<%= form_for(@building) do |f| %>
  <% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
      <% @building.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :building_number %><br>
    <%= f.text_field :building_number %>
  </div>
  <div class="field">
    <%= f.label :street_name %><br>
    <%= f.text_field :street_name %>
  </div>
  <div class="field">
    <%= f.label :street_address_2 %><br>
    <%= f.text_field :street_address_2 %>
  </div>
  <div class="field">
    <%= f.label :street_address_3 %><br>
    <%= f.text_field :street_address_3 %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.hidden_field :country, value: 'US' %>
  </div>
  <!-- <div class="field">
    <%= f.label :country %><br>
     <%= f.country_select :country,
                          { priority: %w(US CA),
                            prompt: 'Please select a country'} %>
  </div> -->

  <!-- <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div> -->

  <div class="states">
  <%= render partial: 'subregion_select',
             locals: { parent_region: f.object.country, form: f} %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="btn">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


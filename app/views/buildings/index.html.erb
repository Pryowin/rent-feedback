<p id="notice"><%= notice %></p>

<h1>Listing Buildings</h1>

<%= form_tag buildings_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, class:"btn btn-primary" %>
  </p>
<% end %>

  <%= will_paginate  %>


<table class="table table-striped table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th>Number  </th>
      <th>Street   </th>
      <th>City     </th>
      <th>State    </th>
      <th>Zip      </th>
      <th>Country  </th>
      <th>Reviews  </th>
    </tr>
  </thead>


  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.building_number, building %></td>
        <td><%= link_to building.street_name, building %></td>
        <td><%= link_to building.city, building %></td>
        <td><%= link_to building.state %>, building</td>
        <td><%= link_to building.postal_code %>, building</td>
        <td><%= link_to building.country %>, building</td>
        <td>
          <span class="badge">
            <%=  link_to building.reviews.count, building %>
          </span>
          <span class="btn btn-success btn-xs write-review">
            <%=  link_to '+', new_review_path(subject: building) %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate %>

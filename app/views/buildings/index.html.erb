<p id="notice"><%= notice %></p>

<h1>Listing Buildings</h1>


  <%= will_paginate  %>


<table class="table table-striped table-bordered table-hover table-condensed">

  <thead>
    <tr>
      <th>Address  </th>
      <th>City     </th>
      <th>State    </th>
      <th>Zip      </th>
      <th>Country  </th>
    </tr>
  </thead>


  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.street_address , building %></td>
        <td><%= building.city %></td>
        <td><%= building.state %></td>
        <td><%= building.postal_code %></td>
        <td><%= building.country %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate %>

<%= link_to 'New Building', new_building_path %>
